{
	"name": "Python",
	"image": "mcr.microsoft.com/devcontainers/python:dev-bookworm",
	"features": {
	},
	"customizations": {
		"vscode": {
			"settings": {
				"files.exclude": {
					"**/.git": true,
					"**/.svn": true,
					"**/.hg": true,
					"**/CVS": true,
					"**/.DS_Store": true,
					"**/Thumbs.db": true,
					".github": true,
					".devcontainer": true,
					".vscode": true,
					"**/__pycache__": true
				}
			},
			"extensions": [
				"njpwerner.autodocstring",
				"KevinRose.vsc-python-indent",
				"ms-python.black-formatter"
			]
		}
	}
}
